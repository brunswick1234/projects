<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:weightSum="1"
                android:background="@android:color/background_light">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="80dip"
            android:text="New Text"
            android:id="@+id/opponentProfileInChooseTwoPlayersGameOpponent"
            android:textColor="#ff0f0f0f"
            android:textStyle="bold" android:visibility="visible"
            android:layout_below="@+id/opponentPhotoInChooseTwoPlayersGameOpponent"
            android:layout_alignStart="@+id/opponentPhotoInChooseTwoPlayersGameOpponent" android:layout_marginTop="30dp"
            android:layout_alignEnd="@+id/opponentPhotoInChooseTwoPlayersGameOpponent" android:textSize="22dp"
            android:gravity="center_horizontal"/>
    <ImageButton
            android:layout_width="200dip"
            android:layout_height="200dip"
            android:id="@+id/opponentPhotoInChooseTwoPlayersGameOpponent"
            android:onClick="startTwoPlayersGame"
            android:paddingTop="30dp"
            android:layout_marginTop="40dp"
            android:scaleType="fitXY" android:layout_alignParentTop="true" android:layout_centerInParent="true"
            android:background="@android:color/background_light"/>
    <ImageButton
            android:layout_width="30dip"
            android:layout_height="70dip"
            android:id="@+id/goPrevious"
            android:onClick="goToPreviousOpponent"
            android:src="@drawable/goprevious" android:scaleType="fitXY"
            android:background="@android:color/background_light" android:layout_alignTop="@+id/goNext"
            android:layout_alignParentStart="true"/>
    <ImageButton
            android:layout_width="30dip"
            android:layout_height="70dip"
            android:id="@+id/goNext"
            android:onClick="goToNextOpponent"
            android:src="@drawable/gonext" android:scaleType="fitXY"
            android:background="@android:color/background_light"
            android:layout_below="@+id/opponentPhotoInChooseTwoPlayersGameOpponent" android:layout_alignParentEnd="true"/>
</RelativeLayout>